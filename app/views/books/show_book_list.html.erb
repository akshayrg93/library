<h1>Books List</h1>
<h3><font color="blue">You can take a maximum of 3 books</font></h3><br>
<h3><font color="blue">You took <%= @user.book_count %> books</font></h3>
<table border ="1">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Details</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.language %></td>
      <td><%= book.details %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Get it', user_get_book_path(book) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Home', root_path %>

