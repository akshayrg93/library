<h1>Books List</h1>
 
<table border ="1">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Language</th>
    <th>Details</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.language %></td>
      <td><%= book.details %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Remove', book_path(book), 
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
     
    </tr>
  <% end %>
</table>

<%= link_to 'New book', new_book_path %><br>
