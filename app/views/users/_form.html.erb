<div class = "registration_box">
  <%= form_for @user do |f| %>
    <p>
      <%= f.label :name, class: 'form_label' %> 
      <%= f.text_field :name, class: 'form_field' %>
    </p>

    <p> 
      <%= f.label :address, class: 'form_label' %> 
      <%= f.text_area :address, class: 'form_field', style: "width: 167px" %>
    </p>

    <p>
      <%= f.label :phone, class: 'form_label' %> 
      <%= f.text_field :phone, class: 'form_field'%>
    </p>

    <p>
      <%= f.label :state, class: 'form_label' %>
      <%= f.text_field :state, class: 'form_field'%>
    </p>

    <p>
      <%= f.label :country, class: 'form_label' %> 
      <%= f.collection_select(:country, Country.all, :name, :name) %>
    </p>
      
    <p>
      <%= f.label :email, class: 'form_label' %>
      <%= f.text_field :email, class: 'form_field'%>
    </p> 

    <p>
      <%= f.label :password, class: 'form_label' %>
      <%= f.password_field :password, class: 'form_field'%>
    </p>

    <p>
      <%= f.label :password_confirmation, class: 'form_label' %>
      <%= f.password_field :password_confirmation, class: 'form_field'%>
    </p>

    <p>
      <br><%= f.submit :class => 'sub_button' %>
    </p>
  <% end %>
</div>