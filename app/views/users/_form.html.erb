

  <%= form_for @user do |f| %>
    <p>
      <%= f.label :name %>: 
      <%= f.text_field :name %>
    </p>

    <p> 
      <%= f.label :address %>: 
      <%= f.text_area :address %>
    </p>

    <p>
      <%= f.label :email %>: 
      <%= f.text_field :email %>
    </p> 

    <p>
      <%= f.label :phone %>: 
      <%= f.text_field :phone %>
    </p>

    <p>
      <%= f.label :state %>: 
      <%= f.text_field :state %>
    </p>

    <p>
      <%= f.label :country %> 
      <%= f.collection_select(:country, Country.all, :name, :name) %>
    </p>

    <p>
      <%= f.submit %>
    </p>
 <% end %>

