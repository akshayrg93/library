<h1>Users List</h1>
<div class = "datagrid">
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Addres</th>
    <th>Email</th>
    <th>Phone</th>
    <th>State</th>
    <th>Country</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th>Get a book</th>
  </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="10">
        <div id="no-paging">&nbsp;</div>
    </tr>
  </tfoot>

  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.address %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.state %></td>
      <td><%= user.country %></td>
      <td><%= link_to 'Show', user_path(user)%></td>
      <td><%= link_to 'Edit', edit_user_path(user)%></td>
      <td><%= link_to 'Destroy', user_path(user), 
      method: :delete,
      data: { confirm: 'Are you sure?' }%></td>
      <td><%= link_to 'Get a Book', show_available_books_path(user)%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'New user', new_user_path, :class => "middle" %><br>
<%= link_to 'Home', root_path, :class => "middle" %>
