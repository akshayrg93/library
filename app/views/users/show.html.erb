<h1 class = "headings">User Details</h1>
<h2><font color="green"><%= flash[:win] %></font></h2>
<h2><font color="green"><%= flash[:registration] %></font></h2>
<h2><font color="green"><%= flash[:profile_update] %></font></h2>
<h2><font color="green"><%= flash[:success] %></font></h2>
<h2><font color="red"><%= flash[:failure] %></font></h2>
<h2><font color="green"><%= flash[:bought_the_book] %></font></h2>

<div class="details">
  <table>
    <tr>
      <td>Name</td>
      <td>:<%= @user.name %></td>
    </tr>
    <tr>
      <td>Address</td>
      <td>:<%= @user.address %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td>:<%= @user.email %></td>
    </tr>
    <tr>
      <td>Phone</td>
      <td>:<%= @user.phone %></td>
    </tr>
    <tr>
      <td>State</td>
      <td>:<%= @user.state %></td>
    </tr>
    <tr>
      <td>Country</td>
      <td>:<%= @user.country %></td>
    </tr>
 </table>
</div>
  
<% if @user.books.empty? %>
  <h2><font color="white">You have not taken any books</font></h2>
<% else %>
  <h2><font color="white">Books Taken</font></h2>
  <div class = "datagrid">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Author</th>
          <th>Return</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <td colspan="3">
          <div id="no-paging">&nbsp;</div>
        </tr>
      </tfoot>
      <% @user.books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><%= link_to 'Return', user_return_book_path(book.id), :class => "table_link" %></td>
          </tr>    
        </tbody>
      <% end %>
    </table>
  </div>   
<% end %>

<br><%= link_to 'Get a book', show_available_books_path(:type => "lend"), :class => "middle" %>
<br><%= link_to 'Buy a book', show_available_books_path(:type => "buy"), :class => "middle" %>