<h1>Users List</h1>
 
<table border ="1">
  <tr>
    <th>Name</th>
    <th>Addres</th>
    <th>Email</th>
    <th>Phone</th>
    <th>State</th>
    <th>Country</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.address %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= user.state %></td>
      <td><%= user.country %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), 
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New user', new_user_path %><br>
